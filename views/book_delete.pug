extends layout 

block content 
  h1 #{title}: #{book.title}

  if book_instances.length 
    p #[strong Delete the following instances before attempting to delete this book.]

      h4 Book Instances 

      dl 
      each instance in book_instances 
        dt 
          a(href=instance.url) #{book.title} - #{instance.imprint}
        hr
  else 
    p Do you really want to delete this Book? 

    form(method='POST' action='')
      div.form-group
        input#bookid.form-control(type='hidden' name='bookid'
        required='true' value=book._id)

        button.btn.btn-danger(type='submit') Delete


